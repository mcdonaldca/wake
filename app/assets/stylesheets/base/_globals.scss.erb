* {
	padding: 0;
	margin: 0;
}

html, body {
	height: 100%;
	width: 100%;
}

html {
	background: $gray;
}

body {
	max-width: 500px;
	margin: 0 auto;
	background: white;
}

header {
	height: 3em;
	background: $dark-blu;

	.logo {
		width: 2em;
		padding-top: .5em;
		margin: 0 auto;

		img {
			height: 2em;
			width: 100%;
		}
	}
}

h1 {
	font: 700 7em Orbitron;
	color: $pink;
	text-align: center;
	width: 100%;

	margin-top: 17vh;
}

.button-container {
	width: 100%;
	text-align: center;
}

.button {
	display: inline-block;
	background-color: $dark-blu;
	color: $blu;
	font: 1.75em Questrial;

	@include border-radius(1em);
	border-right: solid .2em darken($dark-blu, 30%);
	border-bottom: solid .2em darken($dark-blu, 30%);

	padding: .6em 1em .5em;
	margin: .5em 0;
	text-decoration: none;
}

#core {
	min-height: 100%;
	height: auto !important; /* This line and the next line are not necessary unless you need IE6 support */
	height: 100%;
	margin: 0 auto -5px; /* the bottom margin is the negative value of the footer's height */
}

#core-footer, #core .push {
	height: 5px; /* .push must be the same height as .footer */
}


#landing {
	min-height: 100%;
	height: auto !important; /* This line and the next line are not necessary unless you need IE6 support */
	height: 100%;
	margin: 0 auto -300px; /* the bottom margin is the negative value of the footer's height */	
}

#landing-footer, #landing .push {
	height: 300px; /* .push must be the same height as .footer */
}

#landing-footer {
	width: 100%;
	text-align: center;
	img {
		width: 300px;
	}
}