* {
	padding: 0;
	margin: 0;
}

html, body {
	height: 100%;
	width: 100%;
}

html {
	background: $gray;
}

body {
	max-width: 500px;
	margin: 0 auto;
	background: white;
}

header {
	height: 2.5em;
	background: $dark-blu;

	.logo, .logo-wake {
		padding-top: .5em;
	}

	.logo {
		width: 1.5em;
		margin: 0 auto;
	}

	.logo-wake {
		width: 6.3075em;
		margin-left: .5em;
	}

	img {
			height: 1.5em;
			width: 100%;
		}
}

h1#wake {
	font: 700 5em Orbitron;
	color: $pink;
	text-align: center;
	width: 100%;

	margin-top: 7vh;
}

h1 {
	font: 3em Questrial;
	color: $pink;
	text-align: center;
	width: 100%;

	margin-top: 0;
}

h2.subtitle {
	font: 1em Questrial;
	color: $dark-blu;
	text-align: center;
	width: 100%;
	margin-bottom: .5em;
}

h3 {
	color: $pink;
	font: 1.5em Questrial;
	text-align: right;
	padding: 0 .35em .25em 0;
}

.button-container {
	width: 100%;
	text-align: center;
}

.connections .button-container {
	text-align: right;
}

.button {
	display: inline-block;
	background-color: $dark-blu;
	color: $blu;
	font: 1.25em Questrial;

	@include border-radius(1em);
	border-right: solid .2em darken($dark-blu, 30%);
	border-bottom: solid .2em darken($dark-blu, 30%);

	padding: .6em 1em .5em;
	margin: .15em 0;
	text-decoration: none;
}

.bottom-security {
	width: 7em;
	height: 15.55em;
	position: absolute;
	bottom: 10px;

	img {
		width: 100%;
		height: 100%;
	}

	&.left {
		left: -10px;
	}

	&.right {
		right: 10px;
	}
}

.connections {
	position: absolute;
	right: 10px;
	bottom: 20px;
}

#wrapper {
	min-height: 100%;
	height: auto !important; /* This line and the next line are not necessary unless you need IE6 support */
	height: 100%;
	<% if @graphic %>
		margin: 0 auto -5px; /* the bottom margin is the negative value of the footer's height */
	<% else %>
		margin: 0 auto -15.55em; /* the bottom margin is the negative value of the footer's height */
	<% end %>
}

<% if @graphic %>
	footer, #push {
		height: 5px; /* .push must be the same height as .footer */
	}
<% else %>
	footer, #push {
		height: 15.55em; /* .push must be the same height as .footer */
	}
<% end %>

footer#graphic {
	width: 100%;
	text-align: center;
	img {
		height: 100%;
		width: 15.55em;
	}
}